
<div class="container">
    <div class="row">
	    <div class="col-xs-6">
		    <div class="panel panel-default">
		        <div class="panel-heading">
		            Agent: <strong><span data-agent="hostname"></span></strong>
		        </div>
		        <table class="table">
		            <tr><td>Hostname</td><td data-agent="hostname_search"></td></tr>
		            <tr><td>Port</td><td data-agent="port"></td></tr>
                    <tr><td>Last submitted</td><td data-agent="last_submitted"></td></tr>
                    <tr><td>MySQL running</td><td data-agent="mysql_running"></td></tr>
                    <tr><td>MySQL port</td><td data-agent="mysql_port"></td></tr>
                    <tr><td>MySQL disk usage</td><td data-agent="mysql_disk_usage"></td></tr>
		        </table>
		    </div>
	    </div>
	    <div class="col-xs-6">
		    <div class="panel panel-default">
		        <div class="panel-heading">
		            Snapshots
		        </div>
		        <table class="table">
                    <tr><td>Available locally</td><td><table class="table table-condensed table-unbordered" data-agent="available_local_snapshots"></table></td></tr>
                    <tr><td>Available remote</td><td><table class="table table-condensed table-unbordered" data-agent="available_remote_snapshots"></table></td></tr>
                    <tr><td>Snapshots taken on this host</td><td><table class="table table-condensed table-unbordered" data-agent="lv_snapshots"></table></td></tr>
                    <tr><td>Mounted snapshot</td><td><table class="table table-condensed table-unbordered"><tr data-agent="mount_point"></tr></table></td></tr>
		        </table>
		    </div>
	    </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <h5>Active seeds</h5>
            <div class="active_seeds">
                <table class="table table-condensed table-bordered table-striped ">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Target host</th>
                            <th>Source host</th>
                            <th>Seed start time</th>
                        </tr>
                    </thead>
                    <tbody data-agent="active_seeds"></tbody>
                </table>
            </div>
        </div>
        <div class="panel-body">
            <h5>Seed states</h5>
            <div class="seed_states">
                <table class="table table-condensed table-bordered table-striped ">
                    <thead>
                        <tr>
                            <th>State start time</th>
                            <th>State action</th>
                            <th>Error message</th>
                        </tr>
                    </thead>
                    <tbody data-agent="seed_states"></tbody>
                </table>
            </div>
        </div>
        <div class="panel-body">
            <h5>Recent seeds</v>
            <div class="recent_seeds">
                <table class="table table-condensed table-bordered table-striped ">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Target host</th>
                            <th>Source host</th>
                            <th>Seed start time</th>
                        </tr>
                    </thead>
                    <tbody data-agent="recent_seeds"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    function currentAgentHost() {
        return "{{.agentHost}}";
    }
</script>
<script src="/js/agent.js"></script>
